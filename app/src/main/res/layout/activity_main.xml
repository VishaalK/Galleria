<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/parent_view" >

    <TextView android:id="@+id/text_view"
        android:text="@string/searching_for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        />

    <TextView android:id="@+id/contacts_label"
        android:text="@string/contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:layout_below="@id/text_view"
        />

    <TextView android:id="@+id/contact_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_below="@id/contacts_label"
        android:visibility="gone"
        />

    <TextView android:id="@+id/contact_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_below="@id/contact_1"
        android:visibility="gone"
        />

    <TextView android:id="@+id/contact_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_below="@id/contact_2"
        android:visibility="gone"
        />

    <TextView android:id="@+id/apps_label"
        android:text="@string/applications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:layout_below="@id/contact_3"
        android:visibility="visible" />

    <TextView android:id="@+id/app_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_below="@id/apps_label"
        android:visibility="gone"
        />

    <TextView android:id="@+id/photos_label"
        android:text="@string/photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:layout_below="@id/app_1"
        android:visibility="visible" />

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:stretchMode="columnWidth"
        android:layout_below="@id/photos_label"
        android:smoothScrollbar="false"
        android:stackFromBottom="false"
        android:gravity="center" />

</RelativeLayout>
